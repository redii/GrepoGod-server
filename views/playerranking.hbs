<!DOCTYPE html>
<html lang="en">

  {{> head}}

  <body>

    {{> navbar}}

    <div class="container">
      <div class="row mt-5"></div>
      <div class="row">
        <div class="col-md-12 text-center">
          <h1>Player Ranking for {{world}}</h1>
          <p class="text-muted" style="font-size: 13px">You can go back to your dashboard by clicking <a href="/dashboard/{{world}}">here</a>. Use Ctrl+F to search for players.</p>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <table class="table table-sm table-bordered table-hover">
            <thead>
              <tr>
                <th class="text-center" scope="col">Rank</th>
                <th scope="col">Name</th>
                <th class="text-center" scope="col">Points</th>
                <th class="text-center" scope="col"># Towns</th>
                <th class="text-center" scope="col">Bash All</th>
                <th class="text-center" scope="col">Bash Off</th>
                <th class="text-center" scope="col">Bash Def</th>
              </tr>
            </thead>
            <tbody>
              {{#each player}}
              <tr>
                <th class="text-center" scope="row">{{lastOfArray rank}}</th>
                <td><a href="/playersearch/{{../world}}/{{name}}">{{name}}</a></td>
                <td class="text-center" data-toggle="tooltip" data-placement="bottom" title="{{number (lastOfArray points)}}">{{number (lastOfArray points) "0.0a"}}</td> <!-- {{number points "0.0a"}} -->
                <td class="text-center">{{lastOfArray towns}}</td>
                <td class="text-center" data-toggle="tooltip" data-placement="bottom" title="{{number (lastOfArray killsall)}}">{{number (lastOfArray killsall) "0.0a"}}</td>
                <td class="text-center" data-toggle="tooltip" data-placement="bottom" title="{{number (lastOfArray killsoff)}}">{{number (lastOfArray killsoff) "0.0a"}}</td>
                <td class="text-center" data-toggle="tooltip" data-placement="bottom" title="{{number (lastOfArray killsdef)}}">{{number (lastOfArray killsdef) "0.0a"}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>

    {{> js}}

  </body>
</html>
